{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "CMake: Configure",
        "type": "shell",
        "command": "cmake",
        "args": [
          "-S",
          ".",
          "-B",
          "build",
          "-DCMAKE_BUILD_TYPE=Debug"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      },
      {
        "label": "CMake: Build",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build",
          "build"
        ],
        "dependsOn": "CMake: Configure",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      },
      {
        "label": "Run Executable",
        "type": "shell",
        "command": "${workspaceFolder}/build/2d_renderer",
        "group": {
          "kind": "test",
          "isDefault": false
        },
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        }
      }
    ]
  }
  